<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/room">
        <ImageView
            android:id="@+id/records"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:background="@drawable/bar_chart" />
        <TextView
            android:id="@+id/name_gamer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/records"
            android:layout_toStartOf="@id/profile"
            android:layout_centerInParent="true"
            android:text="Records"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:maxLines="1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            app:cardCornerRadius="22.5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profiles"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/room"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Classic"
            android:textColor="@color/gold"
            android:textSize="42sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/ll_game_mode"
            android:layout_width="120dp"
            android:layout_height="195dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            tools:ignore="TextSizeCheck">

            <androidx.cardview.widget.CardView
                android:id="@+id/puzzle_3x3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gold"
                app:cardCornerRadius="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="3x3"
                        android:textColor="@color/gold"
                        android:textSize="35sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/gold"
                app:cardCornerRadius="25dp"
                tools:ignore="TextSizeCheck">

                <androidx.cardview.widget.CardView
                    android:id="@+id/puzzle_4x4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="4x4"
                        android:textColor="@color/gold"
                        android:textSize="35sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/puzzle_5x5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/gold"
                app:cardCornerRadius="25dp"
                tools:ignore="TextSizeCheck">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="5x5"
                        android:textColor="@color/gold"
                        android:textSize="35sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/room"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="Reverce time"
            android:textColor="@color/gold"
            android:textSize="42sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="195dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            tools:ignore="TextSizeCheck">

            <androidx.cardview.widget.CardView
                android:id="@+id/puzzle_3x3_count_down"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gold"
                app:cardCornerRadius="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="3x3"
                        android:textColor="@color/gold"
                        android:textSize="35sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/gold"
                app:cardCornerRadius="25dp"
                tools:ignore="TextSizeCheck">

                <androidx.cardview.widget.CardView
                    android:id="@+id/puzzle_4x4_count_down"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="4x4"
                        android:textColor="@color/gold"
                        android:textSize="35sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/puzzle_5x5_count_down"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/gold"
                app:cardCornerRadius="25dp"
                tools:ignore="TextSizeCheck">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:backgroundTint="@color/grey"
                    app:cardCornerRadius="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="5x5"
                        android:textColor="@color/gold"
                        android:textSize="35sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>