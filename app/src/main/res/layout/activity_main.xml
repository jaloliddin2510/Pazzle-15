<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="5dp">
    <!--Records pause time type-->

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/rl_fragments"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="25dp"
        tools:ignore="SpeakableTextPresentCheck">

        <ImageView
            android:id="@+id/refresh_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/refresh"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_above="@id/rl_fragments"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:background="@drawable/timer"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="11.5dp"
            android:layout_marginEnd="20dp"
            android:text="0 : 00 : 00"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/rl_fragments"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/pause_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pause"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
    </androidx.cardview.widget.CardView>

    <!--Fragment    -->
    <!--Fragment    -->
    <!--Fragment    -->
    <RelativeLayout
        android:id="@+id/rl_fragments"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.example.a15.Fragment3x3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <!--Fragment    -->
    <!--Fragment    -->
    <!--Fragment    -->
    <LinearLayout
        android:id="@+id/ll_game_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_fragments"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:ignore="TextSizeCheck">


        <androidx.cardview.widget.CardView
            android:id="@+id/puzzle_3x3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="3x3"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="25dp"
            tools:ignore="TextSizeCheck">

            <androidx.cardview.widget.CardView
                android:id="@+id/puzzle_4x4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="4x4"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/puzzle_5x5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="25dp"
            tools:ignore="TextSizeCheck">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="5x5"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    tools:ignore="HardcodedText" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>